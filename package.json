{
  "name": "jekyll-ts",
  "version": "0.1.0",
  "description": "A TypeScript reimplementation of Jekyll static site generator",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "jekyll-ts": "dist/cli/index.js"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "files": [
    "dist",
    "README.md",
    "LICENSE"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/benbalter/jekyll.js.git"
  },
  "homepage": "https://github.com/benbalter/jekyll.js#readme",
  "bugs": {
    "url": "https://github.com/benbalter/jekyll.js/issues"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "test": "jest",
    "test:watch": "jest --watch",
    "benchmark": "jest src/cli/commands/__tests__/benchmark.test.ts",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "jekyll",
    "static-site-generator",
    "typescript",
    "cli"
  ],
  "author": "Ben Balter",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "chalk": "^5.6.2",
    "chokidar": "^4.0.3",
    "commander": "^14.0.2",
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "liquidjs": "^10.10.0",
    "lodash.merge": "^4.6.2",
    "markdown-it": "^14.1.0",
    "mime-types": "^3.0.2",
    "minimatch": "^9.0.3",
    "remark": "^15.0.1",
    "remark-gfm": "^4.0.1",
    "remark-html": "^16.0.1",
    "sass": "^1.94.2",
    "sharp": "^0.33.5",
    "shiki": "^1.29.2",
    "slugify": "^1.6.6",
    "striptags": "^3.2.0",
    "unified": "^11.0.5",
    "winston": "^3.18.3",
    "ws": "^8.18.3",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@types/jest": "^30.0.0",
    "@types/js-yaml": "^4.0.9",
    "@types/lodash.merge": "^4.6.9",
    "@types/markdown-it": "^14.1.2",
    "@types/mime-types": "^3.0.1",
    "@types/node": "^20.19.25",
    "@types/sass": "^1.43.1",
    "@types/sharp": "^0.32.0",
    "@types/striptags": "^0.0.5",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.47.0",
    "@typescript-eslint/parser": "^8.47.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "jest": "^30.2.0",
    "prettier": "^3.7.4",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
