{
  "name": "jekyll-ts",
  "version": "0.1.0",
  "description": "A TypeScript reimplementation of Jekyll static site generator",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "jekyll-ts": "dist/cli/index.js"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "lint": "eslint src --ext .ts",
    "lint:fix": "eslint src --ext .ts --fix",
    "test": "jest",
    "test:watch": "jest --watch",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "jekyll",
    "static-site-generator",
    "typescript",
    "cli"
  ],
  "author": "Ben Balter",
  "license": "MIT",
  "engines": {
    "node": ">=18.0.0"
  },
  "dependencies": {
    "@types/markdown-it": "^14.1.2",
    "chalk": "^4.1.2",
    "commander": "^12.0.0",
    "date-fns": "^4.1.0",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "liquidjs": "^10.10.0",
    "markdown-it": "^14.1.0",
    "slugify": "^1.6.6"
  },
  "devDependencies": {
    "@types/jest": "^29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/marked": "^5.0.2",
    "@types/node": "^20.10.6",
    "@typescript-eslint/eslint-plugin": "^6.17.0",
    "@typescript-eslint/parser": "^6.17.0",
    "eslint": "^8.56.0",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.3.3"
  }
}
